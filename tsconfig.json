{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "dist",
    "target": "ES5",
    "allowJs": true,
    "module": "CommonJS",
    "esModuleInterop": true,
    "strict": true,
    "resolveJsonModule": true,
    "moduleResolution": "Node",
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true
  },
  "include": [
    "./src/**/*"
  ]
}
